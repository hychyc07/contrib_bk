               index="0"
               color="Red"
               title="Graph 0" />
        <graph remote="/icub/right_leg/state:o"
               index="1"
               color="Green"
               title="Graph 1" />
        <graph remote="/icub/right_leg/state:o"
               index="2"
               color="Blue"
               title="Graph 2" />
    </plot>
    <plot gridx="1"
          gridy="1"
          hspan="2"
          vspan="2"
          title="torso"
          minval="-100"
          maxval="100"
          bgcolor="Pink">
        <graph remote="/icub/torso/state:o"
               index="0"
               color="Red"
               title="Graph 0"
               type="bars" />
        <graph remote="/icub/torso/state:o"
               index="1"
               color="Green"
               title="Graph 1"
               type="lines" />
        <graph remote="/icub/torso/state:o"
               index="2"
               color="Blue"
               title="Graph 2"
               type="points" />
    </plot>
