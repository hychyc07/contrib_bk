<?xml version="1.0" encoding="UTF-8" ?>
<portscope rows="3" columns="3" carrier="mcast">
    <plot gridx="0"
          gridy="0"
          hspan="1"
          vspan="1"
          title="eyes"
          size="60"
          minval="-100"
          maxval="100"
          bgcolor="LightSlateGrey">
        <graph remote="/icub/head/state:o"
               index="3"
               color="Red"
               title="Graph 0"
               type="lines"
               size="3" />
        <graph remote="/icub/head/state:o"
               index="4"
               color="Green"
               title="Graph 1"
               size="3"
               type="points" />
        <graph remote="/icub/head/state:o"
               index="5"
               color="Blue"
               title="Graph 2"
               size="1"
               type="bars" />
    </plot>
    <plot gridx="0"
          gridy="1"
          hspan="1"
          vspan="2"
          title="right_arm"
          minval="-100"
          maxval="100"
          bgcolor="LightGrey">
        <graph remote="/icub/right_arm/state:o"
               index="0"
               color="Red"
               title="Graph 0"
               type="bars" />
        <graph remote="/icub/right_arm/state:o"
               index="1"
               color="Green"
               title="Graph 1"
               type="lines" />
        <graph remote="/icub/left_arm/state:o"
               index="0"
               color="Blue"
               title="Graph 2"
               type="points" />
        <graph remote="/icub/left_arm/state:o"
               index="1"
               color="Magenta"
               title="Graph 2"
               type="points" />
    </plot>
    <plot gridx="1"
          gridy="0"
          hspan="2"
          vspan="1"
          title="right leg"
          minval="-100"
          maxval="100"
          bgcolor="Yellow">
